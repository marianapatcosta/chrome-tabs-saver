{
  "name": "Chrome Tabs Saver",
  "version": "1.0.0",
  "description": "Chrome Tabs Saver saves groups of tabs and allows reopen, edit and delete them later",
  "manifest_version": 3,
  "author": "Mariana Costa",
  "action": {
    "default_icons": "tabs-saver.png",
    "default_popup": "index.html",
    "default_title": "Chrome Tabs Saver"
  },
  "icons": {
    "16": "tabs-saver.png",
    "48": "tabs-saver.png",
    "128": "tabs-saver.png"
  },
  "permissions": ["tabs", "storage"]
}
